            <div class="spinner"></div>
            Filmler y√ºkleniyor...
        </div>
    </div>

    <div class="container">
        <div class="film-grid" id="filmGrid"></div>
        <div class="no-results" id="noResults" style="display: none;">
            Aradƒ±ƒüƒ±nƒ±z film bulunamadƒ±. üòî
        </div>
        <div class="error-message" id="errorMessage" style="display: none;"></div>
    </div>

    <div class="modal" id="modal">
        <div class="modal-content">
            <button class="close-btn" id="closeBtn">√ó</button>
            <div class="video-container" id="videoContainer"></div>
        </div>
    </div>

    <script>
        let allFilms = [];
        let filteredFilms = [];

        // JSON verilerini √ßek
        async function fetchFilms() {
            try {
                const response = await fetch('http://vtrump10.cdn.zerocdn.com/hdfilmcehennemi-v1.json');
                
                if (!response.ok) {
                    throw new Error('Filmler y√ºklenemedi');
                }

                const data = await response.json();
                
                // JSON'u diziye √ßevir
                allFilms = Object.entries(data).map(([key, value]) => ({
                    id: key,
                    ...value
                }));

                filteredFilms = [...allFilms];
                displayFilms(filteredFilms);
                updateStats();
            } catch (error) {
                console.error('Hata:', error);
                document.getElementById('stats').style.display = 'none';
                document.getElementById('errorMessage').style.display = 'block';
                document.getElementById('errorMessage').textContent = 'Filmler y√ºklenirken bir hata olu≈ütu. L√ºtfen sayfayƒ± yenileyin.';
            }
        }

        // Filmleri g√∂ster
        function displayFilms(films) {
            const filmGrid = document.getElementById('filmGrid');
            const noResults = document.getElementById('noResults');
            
            filmGrid.innerHTML = '';
            
            if (films.length === 0) {
                noResults.style.display = 'block';
                return;
            }
            
            noResults.style.display = 'none';
            
            films.forEach(film => {
                const filmCard = document.createElement('div');
                filmCard.className = 'film-card';
                
                const posterHtml = film.resim 
                    ? `<img src="${film.resim}" alt="${film.isim}" onerror="this.parentElement.innerHTML='Poster<br>Yok'">`
                    : 'Poster<br>Yok';
                
                filmCard.innerHTML = `
                    <div class="film-poster">${posterHtml}</div>
                    <div class="play-icon"></div>
                    <div class="film-title">${film.isim || 'ƒ∞simsiz Film'}</div>
                `;
                
                filmCard.addEventListener('click', () => openFilm(film));
                filmGrid.appendChild(filmCard);
            });
        }

        // ƒ∞statistikleri g√ºncelle
        function updateStats() {
            const stats = document.getElementById('stats');
            stats.innerHTML = `Ar≈üiv G√ºncel: ${filteredFilms.length} Film`;
        }

        // Filmi a√ß
        function openFilm(film) {
            const modal = document.getElementById('modal');
            const videoContainer = document.getElementById('videoContainer');
            
            if (film.link && film.link.trim() !== '') {
                videoContainer.innerHTML = `<iframe src="${film.link}" allowfullscreen allow="autoplay; fullscreen"></iframe>`;
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
            } else {
                alert('Bu film i√ßin video linki bulunmuyor.');
            }
        }

        // Modalƒ± kapat
        function closeModal() {
            const modal = document.getElementById('modal');
            const videoContainer = document.getElementById('videoContainer');
            
            modal.classList.remove('active');
            videoContainer.innerHTML = '';
            document.body.style.overflow = 'auto';
        }

        // Arama fonksiyonu
        function searchFilms(query) {
            query = query.toLowerCase().trim();
            
            if (query === '') {
                filteredFilms = [...allFilms];
            } else {
                filteredFilms = allFilms.filter(film => 
                    film.isim && film.isim.toLowerCase().includes(query)
                );
            }
            
            displayFilms(filteredFilms);
            updateStats();
        }

        // Event listeners
        document.getElementById('closeBtn').addEventListener('click', closeModal);
        
        document.getElementById('modal').addEventListener('click', (e) => {
            if (e.target.id === 'modal') {
                closeModal();
            }
        });

        document.getElementById('searchInput').addEventListener('input', (e) => {
            searchFilms(e.target.value);
        });

        // ESC tu≈üu ile modalƒ± kapat
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Sayfa y√ºklendiƒüinde filmleri √ßek
        fetchFilms();
    </script>
</body>
